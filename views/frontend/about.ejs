<!-- head area include -->
<%- include('../layouts/frontend/head.ejs',{title:'about'}) %>

<!-- navbar area include -->
<%- include('../layouts/frontend/navbar.ejs') %>


    <!-- about_area start -->
    <div class="about_area">
        <div class="container">
            <div class="about_area_content">

                <!-- content_title start -->
                <div class="content_title_and_description" data-aos="fade-right" data-aos-duration="1000">
                    <h2 class="title_text">
                        আমাদের সম্পর্কে</h2>
                    <p class="description_text"><%= profile_info[0].short_bio %></p>
                </div>
                <!-- content_title end -->
                <!-- details area start -->
                <div class="title-area">
                    
                        <% abouts.map( (about)=>{ %>
                            <h2 class="title-area_text bn"></h2>
                            <%- about.short_description %>
                        </h2>
                            <% })%>
                    
                </div>
                <div class="item_description_area">
                    <% abouts.map( (about)=>{ %>
                    <p class="description_text bn">
                       <%- about.long_description %>
                    </p>
                    <% })%>
                </div>
                <!-- details area end -->

            </div>
        </div>
    </div>
    <!-- about_area end -->

    <!-- scroll_button_area start -->
    <a href="#scroll_top" class="scroll-button">
        <span class="icon">
            <i class="fa-solid fa-angle-up"></i>
        </span>
    </a>
    <!-- scroll_button_area end -->
    <%- include('../layouts/frontend/footer.ejs') %>